<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/styles.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body>
    <header class="banner" role="banner">
      <div class="contain">
        <h1 class="banner__title"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
        <p class="banner__subtitle">{{ metadata.subtitle }}</p>
        <nav class="banner__nav" role="navigation">
          <ul>
            {%- for nav in collections.nav | reverse -%}
            <li class="nav__item{% if nav.url == page.url %} is-active{% endif %}"><a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a></li>
            {%- endfor -%}
          </ul>
        </nav>
      </div>
    </header>

    <main {% if templateClass %} class="{{ templateClass }}" {% endif %}>
      <div class="contain">
        {{ content | safe }}
      </div>
    </main>

    <footer role="contentinfo">
      <div class="contain">
        <p class="copyright">&copy; 2019</p>
        <ul class="social">
          <li><a href="">Twitter</a></li>
          <li><a href="">Github</a></li>
          <li><a href="">LinkedIn</a></li>
        </ul>
      </div>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
